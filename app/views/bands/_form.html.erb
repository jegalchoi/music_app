<% if action == :edit %>
  <% action_url = band_url(band) %>
<% else %>
  <% action_url = bands_url %>
<% end %>

<form action="<%= action_url %>" method="POST">
  <%= auth_token %>
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="band_name">Name:</label>
  <input type="text" id="band_name" name="band[name]" value="<%= @band.name %>">
  <br><br>

  <input type="submit" value="<%= (action == :edit) ? 'Edit the band' : 'Submit the band!'%>">  
</form>

<h2><%= link_to 'All the Bands', bands_url %></h2>
