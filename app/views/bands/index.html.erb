<h1>All the Bands</h1>

<ul>
  <% @bands.each do |band| %>
    <li><a href="<%= band_url(band) %>"><%= band.name %></a></li>
    <li>
      <form action="<%= band_url(band) %>" method="POST">
        <%= auth_token %>
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="DELETE">
      </form>
    </li>
  <% end %>
</ul>

<h2><%= link_to 'Submit a Band', new_band_url %></h2>


